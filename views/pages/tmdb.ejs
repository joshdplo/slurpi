<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
</head>

<body>
  <div class="wrapper-default contain">
    <%- include ('../partials/sidebar') %>

    <main id="content">
      <div class="content flex-center">
        <div class="page-banner">
          <div class="left">
            <%- include('../partials/svg/tmdb-logo'); %>
            <h1>TMDB</h1>
          </div>
          <div class="right">
            <span>Movies: <%= totalMovies %></span>
            <span>Shows: <%= totalShows %></span>
          </div>
        </div>
        <span class="spacer-1"></span>
      </div>

      <div class="content">
        <div id="fetcher-status"></div>
        <div class="fetchers">
          <div class="fetcher" data-service="test-fetch" data-query="2000" data-name="Hot Dogs">
            <button class="fetcher-start"><%- include('../partials/svg/fetch'); %></button>
          </div>
          <div class="fetcher" data-service="test-fetch" data-query="5000" data-name="Hamburgers">
            <button class="fetcher-start"><%- include('../partials/svg/fetch'); %></button>
          </div>
          <div class="fetcher" data-service="test-fetch" data-query="10000" data-name="Baloons">
            <button class="fetcher-start"><%- include('../partials/svg/fetch'); %></button>
          </div>
          <div class="fetcher" data-service="test-fetch" data-query="error" data-name="Oopsie Whoopsie">
            <button class="fetcher-start"><%- include('../partials/svg/fetch'); %></button>
          </div>
        </div>
      </div>

    </main>
  </div>

  <div id="global-alerts"></div>
  <%- include ('../partials/end') %>
</body>

</html>